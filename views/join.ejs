<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>회원가입</title>
</head>
<body>
<div id="join">
    <form id="join-form" action="/auth/join" method="post">
        <div>
            <label for="id">아이디</label>
            <input id="id" type="text" maxlength="30" required>
        </div>
        <div>
            <label for="password">비밀번호</label>
            <input id="password" type="password" maxlength="15" required>
        </div>
        <div>
            <label for="verify_password">비밀번호 확인</label>
            <input id="verify_password" type="password" max="15" required>
        </div>
        <div>
            <label for="sns_id">sns_id</label>
            <input id="sns_id" type="text" maxlength="30" required>
        </div>
        <div>
            <label for="nickname">닉네임</label>
            <input id="nickname" type="text" maxlength="15" required>
        </div>
        <div>
            <label for="name">이름</label>
            <input id="name" type="text" maxlength="15" required>
        </div>
        <div>
            <label for="birth_date">생년월일</label>
            <input id="birth_date" type="date" required>
        </div>
        <div>
            <label for="gender">성별</label>
            <input id="gender" type='radio' name='gender' value="true" />남성
            <input type='radio' name='gender' value="false" />여성
        </div>
        <div>
            <img id="img_preview" src="" style="display: none" alt="미리보기">
        </div>
        <div>
            <label for="introduce">자기소개</label>
            <input id="introduce" type="text" maxlength="200" required>
        </div>
        <div>
            <label for="profile_image">프로필 사진</label>
            <input id="profile_image" type="file" accept="image/*">
        </div>
        <button id="register_button" type="submit">회원가입</button>
    </form>
</div>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
    if(document.getElementById('profile_img')) {
        document.getElementById('profile_img').addEventListener('change', function (event) {
            const formData = new FormData();
            formData.append('profile_img', this.files[0]);
            axios.post('/auth/profile_img', formData)
                .then((res) => {
                    document.getElementById('img_preview').src = res.data.url;
                    document.getElementById('img_preview').style.display = 'inline';
                })
                .catch((error) => {
                    console.log(error);
                });
        });
    }
    window.onload = () => {
        if(new URL(location.href).searchParams.get('error') === 'exist')
            alert('이미 존재하는 아이디입니다.');
    }
</script>
</body>
</html>