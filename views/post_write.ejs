<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>게시글 쓰기</title>
</head>
<body>
    <form action="/board/<%= board.id %>/write" method="post">
        <div>
            <label for="title"></label>
            <input type="text" name="title" id="title" placeholder="제목을 입력해 주세요." maxlength="100" required>
        </div>
        <div>
            <label for="content"></label>
            <textarea rows="10" cols="50" style="resize: none" name="content" id="content" placeholder="내용을 입력하세요." maxlength="1000"
                      required></textarea>
        </div>
        <!-- 첨부파일 및 이미지-->
        <% if(board.board_type === 'recruitment') {%>
            <div>
                <label for="deadline"></label>
                <% const offset = new Date().getTimezoneOffset() * 60000 %>
                <% const date = new Date(Date.now() - offset) %>
                <% const max_date = new Date(Date.now() - offset) %>
                <% max_date.setFullYear(max_date.getFullYear() + 1)%>
                <input type="datetime-local" name="deadline" id="deadline" min="<%= date.toISOString().slice(0, 16) %>" max="<%= max_date.toISOString().slice(0, 16)%>", value="<%= date.toISOString().slice(0,16)%>" required>
            </div>
        <% } %>
        <div>
            <input type="submit" value="등록">
        </div>
    </form>
</body>
</html>